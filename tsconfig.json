{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": true,
      "module": "CommonJS",
      "target": "ES2021",
      "rootDir": "./",
      "outDir": "./build",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "strict": true,
      "typeRoots": [
        "./@types",
        "./node_modules/@types"
      ],
      "resolveJsonModule": true,
      "lib": ["dom", "es6"],
      "moduleResolution": "Node",
    },
    "include": [
      "**/*"
    ]
}